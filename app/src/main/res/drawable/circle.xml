<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" /> <!-- Change color for pressed state -->
            <corners android:radius="560dp" /> <!-- Make the shape a circle -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" /> <!-- Change color for default state -->
            <corners android:radius="560dp" /> <!-- Make the shape a circle -->
        </shape>
    </item>

</selector>
